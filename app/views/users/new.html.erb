<h1>Sign Up</h1>
<%= form_for @user do |f| %>

	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2>The following <%= pluralize(@user.errors.count, "error") %> prevented this student from being saved</h2>
			<ul>
				<% @user.errors.full_messages.each do |error| %>
					<li>
					  <%= error %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :full_name %>
		<%= f.text_field :full_name %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>

	<%= f.submit "Sign Up" %>

<% end %>