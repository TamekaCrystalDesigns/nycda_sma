<%= form_for @student do |f| %>

	<% if @student.errors.any? %>
		<div id="error_explanation">
			<h2>The following <%= pluralize(@student.errors.count, "error") %> prevented this student from being saved</h2>
			<ul>
				<% @student.errors.each do |error| %>
					<li>
					  <%= error %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>