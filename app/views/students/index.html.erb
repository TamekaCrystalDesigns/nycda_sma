<h1>Students</h1>

<%= button_to "Add New Student", new_student_path, method: :get %>

<ul>
	<% @students.each do |student| %>
		<li>
				<span><%= link_to(student.email, student_path(student)) %></span> |
				<span><%= student.first_name %></span> |
				<span><%= student.last_name %></span> |
				<span><%= link_to "Delete", student_path(student), method: :delete, data: { confirm: "Are you sure you want to delete this student?"} %></span>
				
		</li>
	<% end %>
</ul>